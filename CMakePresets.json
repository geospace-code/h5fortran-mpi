{
  "version": 3,

"configurePresets": [
{
  "name": "coverage",
  "binaryDir": "${sourceDir}/build-coverage",
  "displayName": "Code Coverage",
  "description": "Build with code coverage enabled.",
  "cacheVariables": {
    "CMAKE_BUILD_TYPE": "Debug",
    "coverage": true
  }
},
{
  "name": "phony"
}
],
"buildPresets": [
  {
    "name": "coverage",
    "configurePreset": "coverage"
  },
  {
    "name": "run-coverage",
    "configurePreset": "coverage",
    "targets": "coverage"
  }
],
"testPresets": [
{
  "name": "default",
  "configurePreset": "phony",
  "output": {
    "outputOnFailure": true,
    "verbosity": "default"
  },
  "execution": {
    "noTestsAction": "error",
    "scheduleRandom": true,
    "stopOnFailure": false,
    "timeout": 10
  }
}
]
}
